{
  "name": "@fe-server/app",
  "type": "module",
  "scripts": {
    "dev": "nodemon",
    "build": "node ./esbuild.config.js",
    "start": "node --loader=extensionless ./dist/index.js"
  },
  "nodemonConfig": {
    "watch": "src",
    "ignore": ["dist/**", "node_mouldes/**"],
    "ext": "ts",
    "exec": "rm -rf ./dist && yarn node ./esbuild.config.js && node --loader=extensionless ./dist/index.js"
  },
  "dependencies": {
    "extensionless": "^1.9.9"
  },
  "devDependencies": {
    "@types/node": "20",
    "esbuild": "^0.25.0",
    "nodemon": "^3.1.9",
    "typescript": "^5.7.3"
  }
}
